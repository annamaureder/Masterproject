\chapter{Notation}
\label{cha:Notation}

\begin{itemize}
	\item[$M$] Input mesh
	\item[$\mathcal{P}$] set of rigid parts
	\item[$\mathcal{J}$] set of joints
	\item[$\mathcal{C}$] set of clusters
	\item[$C_i$] cluster
	\item[$C_{i,j,\cdots}$] sub cluster of $C_i$
	\item[$\mathcal{L}$] set of final sub cluster pairs
	\item[$L_{i,j}$] sub cluster $C_i$
	
	
	
	
\end{itemize}




